
buildfile 'lalrc/lalrc.forge';
buildfile 'lalr_examples/lalr_examples.forge';
buildfile 'lalr_test/lalr_test.forge';

for _, cc in toolsets('^cc.*') do    
    cc:all {
        cc:StaticLibrary '${lib}/lalr_${platform}_${architecture}' {
            cc:Cxx '${obj}/%1' {
                'ErrorPolicy.cpp',
                'ThreadPool.cpp';
            };

            cc:Cxx '${obj}/%1' {
                'Grammar.cpp',
                'GrammarCompiler.cpp',
                'GrammarGenerator.cpp',
                'GrammarParser.cpp',
                'GrammarState.cpp',
                'GrammarSymbol.cpp',
                'GrammarSymbolSet.cpp',
            };

            cc:Cxx '${obj}/%1' {
                'RegexCompiler.cpp',
                'RegexGenerator.cpp',
                'RegexItem.cpp',
                'RegexNode.cpp',
                'RegexParser.cpp',
                'RegexState.cpp',
                'RegexSyntaxTree.cpp',
                'RegexToken.cpp',
            };
        };
    };
end
