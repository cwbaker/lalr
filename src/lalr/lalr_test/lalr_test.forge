
for _, cc in toolsets('^cc.*') do
    cc:all {
        cc:Executable '${bin}/lalr_test' {
            '${lib}/lalr_${platform}_${architecture}';
            '${lib}/UnitTest++_${platform}_${architecture}';

            cc:Cxx '${obj}/%1' {
                'main.cpp',
                'TestParsers.cpp',
                'TestPrecedenceDirectives.cpp',
                'TestRegularExpressions.cpp'
            };
        };
    };
end
